#include <iostream>
using namespace std;

int main()
{
	
	int n;
	int fact =1;
	
	
	
	cout<<"*********************************** FACTORIAL *******************************"<<endl;
	cout<<endl;
	cout<<"Please enter a positive number:";
	cout<<endl;
	cin>>n;
	
	cout<<endl;
	while(n<0)
	{
		cout<<" Incorrect number, please enter a positive number:";
		cin>>n;
	}
	
	for (int f=1; f<=n; f++)
	{
		fact = fact *f;
	}
	
	cout<<"The Factorial of "<<n<<" = "<<fact<<endl;
	return 0;
		
	
}
